<!-- Add Image from Link Dialog -->
<dialog id="addImageLinkDialog">
    <form method="dialog" onsubmit="submitAddImageLink(event)">
        <div class="modal-header">
            <h5 class="modal-title">Add Image from Link</h5>
            <button type="button" class="btn-close" onclick="document.getElementById('addImageLinkDialog').close();"
                aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <label for="imageLink" class="form-label">Image URL</label>
                <input type="url" class="form-control" id="imageLink" required>
            </div>
            <div class="mb-3">
                <label for="imageName" class="form-label">Image Name</label>
                <input type="text" class="form-control" id="imageName" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Image</button>
        </div>
    </form>
</dialog>